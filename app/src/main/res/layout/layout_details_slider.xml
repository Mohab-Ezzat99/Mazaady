<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel_slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:translationZ="8dp"
        app:autoPlay="true"
        app:autoPlayDelay="2000"
        app:carouselType="SHOWCASE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:showBottomShadow="false"
        app:showCaption="false"
        app:showIndicator="false"
        app:showNavigationButtons="false"
        app:showTopShadow="false">

    </org.imaginativeworld.whynotimagecarousel.ImageCarousel>

    <me.relex.circleindicator.CircleIndicator2
        android:id="@+id/dot_slider"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:ci_animator="@animator/scale_with_alpha"
        app:ci_drawable="@drawable/ic_dot_selected"
        app:ci_drawable_unselected="@drawable/ic_dot_unselected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_play" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_weight="1"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/carousel_slider"
        app:layout_constraintEnd_toEndOf="@+id/carousel_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/carousel_slider"
        app:srcCompat="@drawable/ic_play"
        app:tint="@color/black" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/carousel_slider"
        app:layout_constraintEnd_toEndOf="@+id/carousel_slider"
        app:layout_constraintTop_toTopOf="@+id/carousel_slider">

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:padding="@dimen/_4sdp"
            app:srcCompat="@drawable/ic_arrow_right" />

        <ImageView
            android:id="@+id/iv_apps"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:padding="@dimen/_2sdp"
            app:srcCompat="@drawable/ic_apps" />

        <ImageView
            android:id="@+id/iv_fav"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_fav" />

        <ImageView
            android:id="@+id/iv_date"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_date" />

        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_flag" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_share" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>